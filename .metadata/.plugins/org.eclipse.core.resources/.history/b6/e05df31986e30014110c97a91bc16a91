package handsfree;

public class HandsFree {
    private static HeadGestureThread headListener;
    private static SpeechThread speechListener;
    private static ControllerThread controller; 

    public static void main(String[] args) {
        headListener = new HeadGestureThread();
        headListener.start();
        speechListener = new SpeechThread();
        speechListener.start();
        controller = new ControllerThread();
        controller.start();
        try {
            String oldOut = "";
            while (true) {
                Thread.sleep(100);
                synchronized (data) {
                    String out = "";
                    for (int i = 0; i < data.length; i++) {
                        out += String.format("%3.1f", data[i]) + " ";
                    }
                    if (!oldOut.equals(out)) {
                        System.out.println(out);
                        oldOut = out;
                    }
                }
            }
        } catch (Exception e) {
            System.err.println("Main: " + e);
        }
    }
}